<p id="notice"><%= notice %></p>

  <% if user_signed_in? %>
    <% @posts.reverse_each do |post| %>
      <div class="cc">
       <center> <h2 class="ttl"> <%= link_to post.title, post %> </h2>
       <% if post.image.exists? %>
       <%= image_tag post.image.url(:high) %>
       <%end%> 
       <p class="desc"> <%=  post.body %> </p>
      <%= link_to "Delete", post, method: :delete, data:{ confirm: "are you sure"}, class: 'btnD ' %>
       <p align="right">Posted <%= time_ago_in_words(post.created_at) %>ago </p> </center>
       </div>
    <% end %>
    <%= link_to "Delete all", home_trash_em_all_path, class: 'btn btn-default', data: { confirm: "Are you sure you want to delete all posts? "}%>
  <br>
  <% else %>
  <h1 class="rorred">ERROR</h1>
  <h1 class="rorre">No Access privilege </h1>
  <%end%>
